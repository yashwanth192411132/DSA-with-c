#include <stdio.h>

int main() {
    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6, 7};
    int n1 = sizeof(arr1) / sizeof(arr1[0]);
    int n2 = sizeof(arr2) / sizeof(arr2[0]);

    int concatenated[n1 + n2];

    // Copy arr1 elements
    for (int i = 0; i < n1; i++) {
        concatenated[i] = arr1[i];
    }

    // Copy arr2 elements
    for (int i = 0; i < n2; i++) {
        concatenated[n1 + i] = arr2[i];
    }

    // Print concatenated array
    printf("Concatenated array: ");
    for (int i = 0; i < n1 + n2; i++) {
        printf("%d ", concatenated[i]);
    }
    printf("\n");

    return 0;
}
